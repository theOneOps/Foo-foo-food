<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Ombre -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="34dp" />
            <solid android:color="#11000000" /> <!-- Couleur de l'ombre (noir semi-transparent) -->
            <padding

                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

    <!-- Forme principale -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="34dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
