<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom complet"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:layout_marginBottom="8dp" />

        <!-- Type de profil -->
        <TextView
            android:id="@+id/profile_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de profil"
            android:textSize="16sp"
            android:textColor="@color/brown"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofiapro_regular"
                    android:text="@string/email"
                    android:textColor="@color/grey"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    tools:ignore="RtlSymmetry" />

                <ImageButton
                    android:id="@+id/edit_email_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/pen_square_icon"
                    android:contentDescription="Modifier l'email"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTextTextEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:fontFamily="@font/sofiapro_regular"
                android:hint="@string/email_example"
                android:inputType="textEmailAddress"
                android:paddingStart="25dp"
                android:textColorHint="@color/grey_edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="10dp">

            <!-- Groupe pour l'adresse existante -->
            <LinearLayout
                android:id="@+id/group_address_existing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout_address_existing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textViewAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/sofiapro_regular"
                        android:text="@string/deliver_to"
                        android:textColor="@color/grey"
                        android:paddingEnd="10dp"
                        android:textSize="16sp"
                        tools:ignore="RtlSymmetry" />

                    <ImageButton
                        android:id="@+id/edit_address_button"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/pen_square_icon"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/editTextStreetNumber"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/sofiapro_regular"
                        android:hint="@string/street_number_hint"
                        android:inputType="number"
                        android:paddingStart="25dp"
                        android:textColorHint="@color/grey_edit_text"
                        tools:ignore="RtlSymmetry" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/editTextStreetName"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="3"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/sofiapro_regular"
                        android:hint="@string/street_name_hint"
                        android:inputType="textPostalAddress"
                        android:paddingStart="25dp"
                        android:textColorHint="@color/grey_edit_text"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <EditText
                        android:id="@+id/editTextPostalCode"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/sofiapro_regular"
                        android:hint="@string/postal_code_hint"
                        android:inputType="number"
                        android:paddingStart="25dp"
                        android:textColorHint="@color/grey_edit_text"
                        tools:ignore="RtlSymmetry" />

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <EditText
                        android:id="@+id/editTextCity"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_weight="1.7"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/sofiapro_regular"
                        android:hint="@string/city_hint"
                        android:inputType="textPostalAddress"
                        android:paddingStart="25dp"
                        android:textColorHint="@color/grey_edit_text"
                        tools:ignore="RtlSymmetry" />
                </LinearLayout>
            </LinearLayout>

            <!-- Groupe pour l'absence d'adresse -->
            <LinearLayout
                android:id="@+id/group_no_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewNoAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sofiapro_regular"
                    android:text="@string/no_address"
                    android:textColor="@color/grey"
                    android:paddingEnd="10dp"
                    android:textSize="16sp"
                    android:paddingBottom="20dp"
                    android:layout_gravity="center"
                    tools:ignore="RtlSymmetry" />

                <Button
                    android:id="@+id/add_address_button"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:background="@drawable/orange_rounded_button"
                    android:fontFamily="@font/sofiapro_semibold"
                    android:paddingStart="50dp"
                    android:paddingEnd="50dp"
                    android:text="@string/add_address"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
